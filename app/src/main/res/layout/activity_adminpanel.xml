<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalInstallsAllTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Total Installs All Time:    0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalInstallsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Total Installs Today:        0"
            android:textSize="20dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/totalSignUpsAlltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Total SignUp All Time:    0"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/totalSignUpsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Total SignUp Today:        0"
            android:textSize="20dp" />


    </LinearLayout>


    <Switch
        android:id="@+id/switch_Exit_Nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:checked="false"
        android:gravity="center"
        android:text="Exit_Dialog_Nav"
        android:textColor="#090909"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="25sp"

        android:textStyle="bold"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Activate_Ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:checked="false"
        android:gravity="center"
        android:text="Ads"
        android:textColor="#090909"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Sex_Story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:checked="false"
        android:gravity="center"
        android:text="MCB Story"
        android:textColor="#090909"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="UseSwitchCompatOrMaterialXml" />




</LinearLayout>